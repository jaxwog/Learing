<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.recycleview.NestedRecycleViewActivity">

    <ScrollView
        android:id="@+id/titleLay"
        android:background="@color/color_F4F6FC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.love.jax.view.MyRecycle
                android:id="@+id/rec_claim_progress"
                android:layout_marginLeft="@dimen/dimen_dp_18dp"
                android:layout_marginRight="@dimen/dimen_dp_18dp"
                android:layout_marginBottom="@dimen/dimen_dp_20.6dp"
                android:background="@color/color_FFFFFF"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>