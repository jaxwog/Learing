<?xml version="1.0" encoding="utf-8"?>
<com.love.jax.view.CustomViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.events.ViewPagerActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f00"
        android:gravity="center_horizontal"
        android:text="我是第一个View" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0f0"
        android:gravity="center_horizontal"
        android:text="我是第二个View" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00f"
        android:gravity="center_horizontal"
        android:text="我是第三个View" />

</com.love.jax.view.CustomViewPager>