<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.animation.SvgVectorActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/svg_backup_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/svg_test"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/svg_test"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/svg_selector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:onClick="anim1"
            android:layout_width="@dimen/dimen_dp_100dp"
            android:layout_height="@dimen/dimen_dp_100dp"
            android:src="@drawable/path_tick2cross_anim"
            tools:ignore="OnClick" />
        <ImageView
            android:onClick="anim2"
            android:layout_width="@dimen/dimen_dp_100dp"
            android:layout_height="@dimen/dimen_dp_100dp"
            android:src="@drawable/animate_vd_star"
            tools:ignore="OnClick" />
    </LinearLayout>
</LinearLayout>