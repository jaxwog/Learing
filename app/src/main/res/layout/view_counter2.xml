<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_reduce"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/color_4C5979"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="一"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingLeft="@dimen/dimen_dp_10dp"
        android:paddingRight="@dimen/dimen_dp_10dp"/>

    <!--<com.love.jax.activity.tkjobs.NullMenuEditText-->
    <EditText
        android:id="@+id/view_edit"
        android:layout_width="@dimen/dimen_dp_58dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="number"
        android:textCursorDrawable="@color/color_CCCCCC"
        android:singleLine="true"
        android:maxLength="2"
        android:cursorVisible="true"
        android:hint="1"
        android:textStyle="bold"
        android:textColorHint="@color/color_999999"
        android:textColor="@color/color_1F2845"
        android:textSize="16sp"
        android:background="@color/color_F4F6FC"/>


    <TextView
        android:id="@+id/btn_add"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"

        android:textColor="@color/color_8A91A4"
        android:text="十"
        android:textSize="16sp"
        android:paddingLeft="@dimen/dimen_dp_10dp"
        android:paddingRight="@dimen/dimen_dp_10dp"/>


</LinearLayout>