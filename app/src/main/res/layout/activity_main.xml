<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/search_title_backup"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1dp"
        android:background="@color/color_FFF4F7FD" />


    <!--历史搜索，如果点击删除，整个视图隐藏-->
    <LinearLayout
        android:id="@+id/item_his_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_search_his"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_18dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dimen_dp_5dp"
                android:paddingTop="@dimen/dimen_dp_15dp"
                android:text="@string/string_histroy_search"
                android:textColor="@color/color_1F2845"
                android:textSize="@dimen/dimen_sp_13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_his_delhis"
                android:padding="8dp"
                android:layout_width="@dimen/dimen_dp_28dp"
                android:layout_height="@dimen/dimen_dp_28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_dp_10dp"
                android:src="@mipmap/search_icon_delete" />

        </LinearLayout>

        <com.love.jax.view.HistoryFlowLayout
            android:id="@+id/fl_search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_iv_head"
            android:layout_marginBottom="@dimen/dimen_dp_0dp"
            android:layout_marginLeft="@dimen/dimen_dp_8dp"
            android:layout_marginRight="@dimen/dimen_dp_0dp">
        </com.love.jax.view.HistoryFlowLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_5dp"
            android:background="@color/color_F4F6FC" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>