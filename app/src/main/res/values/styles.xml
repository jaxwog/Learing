<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoAcBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="LightNoAcBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/mytextcolor</item>
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimary_pinkDark</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <!-- 设置虚拟导航栏背景颜色 -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimary_pink</item>
        <!--设置间隔线颜色和大小-->
        <item name="android:listDivider">@drawable/item_divider</item>
                 <!--<item name="android:windowBackground">@color/background</item> -->
                 <!--<item name="colorAccent">#906292</item> -->
    </style>

    <!--
Base application theme, dependent on API level. This theme is replaced
by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--设置 actionbarsize大小-->
        <item name="actionBarSize">48dip</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!--colorPrimary：主色，-->
    <!--colorPrimaryDark：主色&#45;&#45;深色，一般可以用于状态栏颜色、底部导航栏-->
    <!--colorAccent：（代表各个空间的基调颜色&#45;&#45;CheckBox、RadioButton、ProgressBar等等）-->
    <!--"android:textColor"：当前所有的文本颜色-->
    <!-- Application theme. -->
    <style name="MyAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/mytextcolor</item>
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimary_pinkDark</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <!-- 设置虚拟导航栏背景颜色 -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimary_pink</item>
        <!--设置间隔线颜色和大小-->
        <item name="android:listDivider">@drawable/item_divider</item>
        <!--设置时间、信号状态栏颜色-->
        <!--<item name="android:statusBarColor" tools:ignore="NewApi">@color/zteBlue</item>-->
    </style>

    <!--14 为4.0   19为4.4    21为5.0-->


    <style name="tv_1dp_line">
        <item name="android:background">@color/color_F4F6FC</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp_1dp</item>
    </style>



    <!--发票信息-->
    <style name="style_invoice_info_lay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp_50dp</item>
        <item name="android:background">@color/color_FFFFFF</item>
        <item name="android:paddingLeft">@dimen/dimen_dp_18dp</item>
        <item name="android:paddingRight">@dimen/dimen_dp_18dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_dp_1dp</item>
    </style>
    <style name="style_invoice_info_tv_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/dimen_sp_14sp</item>
    </style>
    <style name="style_invoice_info_tv_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textSize">@dimen/dimen_sp_14sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/dimen_dp_47dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="style_invoice_info_lineview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp_1dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_dp_18dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_dp_18dp</item>
        <item name="android:background">@color/color_F8F8F8</item>
    </style>
    <style name="style_invoice_info_radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/select_btn</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/dimen_sp_14sp</item>
        <item name="android:padding">@dimen/dimen_dp_6dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
