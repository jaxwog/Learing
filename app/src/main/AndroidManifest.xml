<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.love.jax">

    <application
        android:name=".JaxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/jax_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jax_logo"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScreenAdaptationActivity" />
        <activity android:name=".activity.BaseActivity"></activity>
    </application>

</manifest>